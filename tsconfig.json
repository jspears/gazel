{
  "compilerOptions": {
    "target": "ES2022",
    "module": "node16",
    "moduleResolution": "node16",
    "baseUrl": ".",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client", "svelte", "node"],
//    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": false,

  //  "outDir": "dist",
    // "sourceMap": true,
    // "declaration": false,
    // "declarationMap": false,
    // "allowJs": false,
    "paths": {
      "proto/*": ["./bazel-bin/proto/*", "./proto/*"],
      "$lib/*": ["./client/lib/*"],
      "$client/*": ["./client/*"],
    }

  },
  "exclude": [
    "node_modules",
    "dist",
  ]
  
}
